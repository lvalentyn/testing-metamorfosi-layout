- const socialList4 =['fb', 'inst',  'in', 'tw']

mixin popupInfo(props={})
	.popup__top
		.popup__img
			img(src=`@img/${props.photo}.jpg`, alt="team photo")
		ul.popup__info
			li.popup__row
				p.popup__key Name:
				p.popup__descr #{props.name}
			li.popup__row
				p.popup__key Position:
				p.popup__descr #{props.pos}
			li.popup__row
				p.popup__key Phone:
				p.popup__descr +3125789075
			li.popup__row
				p.popup__key Email:
				p.popup__descr username@mail.com
			li.popup__social-box
				each soc in socialList4
					a(href=`/` aria-label=`${soc} link` class=`popup__soc--${soc}`).popup__soc
